meta {
  name: 1_Get_list_of_users
  type: http
  seq: 1
}

get {
  url: {{url}}/{{user_path_root}}
  body: none
  auth: inherit
}

script:post-response {
  // --- Showcase Skill: Test Data Bootstrapping ---
  
  // Puisque c'est le premier test, on va rÃ©cupÃ©rer un ID existant
  // pour s'en servir dans les tests suivants (Get by ID, Update, etc.)
  
  const users = res.getBody();
  
  if (Array.isArray(users) && users.length > 0) {
    // On prend le premier utilisateur de la liste
    const firstUser = users[0];
    
    // On sauvegarde son ID dans une variable globale pour la collection
    bru.setVar("existingUserId", firstUser.id);
    console.log(`[Showcase Bootstrap] Selected existing User ID: ${firstUser.id}`);
  } else {
    console.warn("[Showcase Warning] No users found. Subsequent tests might fail.");
  }
}

tests {
  // 1. Basic Health Check
  test("Status code is 200 OK", function() {
    expect(res.getStatus()).to.equal(200);
  });

  // 2. Performance (SLA Check)
  test("Response time is under 1000ms", function() {
    expect(res.getResponseTime()).to.be.below(1000);
  });

  // 3. Structure & Data Integrity
  test("Response is a non-empty Array", function() {
    const body = res.getBody();
    expect(body).to.be.an('array');
    expect(body.length).to.be.greaterThan(0);
  });

  // 4. Schema Validation (Deep Inspection)
  test("Users have correct properties (id, name, email)", function() {
    const users = res.getBody();
    // On vÃ©rifie le premier Ã©lÃ©ment pour s'assurer que le format est bon
    const user = users[0];
    
    expect(user).to.have.property('id').that.is.a('number');
    expect(user).to.have.property('name').that.is.a('string');
    expect(user).to.have.property('email').that.is.a('string');
    expect(user).to.have.property('company').that.is.an('object');
  });
}

