script:pre-request {
  // --- Showcase Strategy: Safe Cleanup & Idempotency ---
  
  // 1. Self-Healing
  let targetId = bru.getVar("userId");

  if (!targetId) {
    // Si lanc√© isol√©ment, on cible l'ID 1 (safe sur un mock)
    bru.setVar("userId", 1);
    console.warn("[Showcase Warning] No userId to delete. Defaulting to ID 1.");
  } else {
    console.log(`[Showcase Info] Deleting User ID: ${targetId}`);
  }
}

tests {
