meta {
  name: 1_Get_list_of_posts
  type: http
  seq: 1
}

get {
  url: {{url}}/{{post_path_root}}
  body: none
  auth: inherit
}

script:post-response {
  // --- Showcase Strategy: Data Bootstrapping ---
  
  // On récupère un Post existant pour les tests suivants
  // (ex: Get Post by ID, Get Comments of Post)
  
  const posts = res.getBody();
  
  if (Array.isArray(posts) && posts.length > 0) {
    const firstPost = posts[0];
    
    // On sauvegarde l'ID du post
    bru.setVar("existingPostId", firstPost.id);
    
    // On sauvegarde aussi l'ID de l'auteur (utile pour des tests de corrélation)
    bru.setVar("relatedUserId", firstPost.userId);
    
    console.log(`[Showcase Bootstrap] Selected existing Post ID: ${firstPost.id}`);
  } else {
    console.warn("[Showcase Warning] No posts found.");
  }
}

tests {
  // 1. Health Check
  test("Status code is 200 OK", function() {
    expect(res.getStatus()).to.equal(200);
  });

  // 2. Structure
  test("Response is an array of posts", function() {
    expect(res.getBody()).to.be.an('array');
    expect(res.getBody().length).to.be.greaterThan(0);
  });

  // 3. Schema Validation
  test("Post object structure is valid", function() {
    const post = res.getBody()[0];
    expect(post).to.have.property('id');
    expect(post).to.have.property('userId');
    expect(post).to.have.property('title').that.is.a('string');
    expect(post).to.have.property('body').that.is.a('string');
  });
}